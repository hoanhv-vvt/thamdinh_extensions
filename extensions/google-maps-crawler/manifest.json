{
  "manifest_version": 3,
  "name": "Google Maps Image Crawler",
  "version": "2.2.0",
  "description": "Extract and display image links from Google Maps",
  "permissions": [
    "tabs",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://www.google.com/maps/*",
    "https://*.googleusercontent.com/*",
    "https://*.ggpht.com/*",
    "https://*.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/maps/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}